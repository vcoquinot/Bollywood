<?php
$jour = 3; 

if ($jour == 1)
{ 
	echo "Nous sommes lundi"; 
} 

elseif ($jour == 2)
{ 
	echo "Nous sommes mardi"; 
} 

elseif ($jour == 3)
{ 
	echo "Nous sommes mercredi";
} 

elseif ($jour == 4)
{ 
	echo "Nous sommes jeudi"; 
} 

else
	echo "je ne sais pas quel jour nous sommes ! ";

?>

<?php
switch($jour)
{
	case 1:
	echo "Nous sommes lundi"; 
	break;

	case 2:
	echo "Nous sommes mardi"; 
	break;

	case 3: 
	echo "Nous sommes mercredi";
	break;

	case 4:
	echo "Nous sommes jeudi"; 
	break;
}
